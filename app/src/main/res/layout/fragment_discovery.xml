<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fafafa"
    android:orientation="vertical">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refrsh_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_discovery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="-15dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/bg_white20_shape"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@mipmap/bg_search" />

                <com.pay.poriot.ui.widget.CleanableEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="@string/search"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="@color/color_ff"
                    android:textColorHint="@color/color_2"
                    android:textCursorDrawable="@drawable/edt_cursor_color"
                    android:textSize="@dimen/font_13" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                android:text="@string/recommended_app"
                android:textColor="@color/color_ff"
                android:textSize="@dimen/font_17" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_discover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:overScrollMode="never" />
        </LinearLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</LinearLayout>