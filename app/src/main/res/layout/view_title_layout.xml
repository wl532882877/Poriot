<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:id="@+id/view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/ll_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:focusable="false"
                android:gravity="center_vertical|right"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/size_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title_left_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-15dp"
            android:layout_toRightOf="@id/ll_title_left"
            android:clickable="true"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_15"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_title_left_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:focusable="false"
                android:gravity="center_vertical|right"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/size_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/color_1"
                android:textSize="@dimen/size_1" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:focusable="false"
                android:gravity="center_vertical|right"
                android:includeFontPadding="false"
                android:textColor="@color/color_1"
                android:textSize="@dimen/size_2" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_title_right1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_title_right"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_title_right_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_5"
                android:duplicateParentState="true"
                android:focusable="false"
                android:gravity="center_vertical|right"
                android:includeFontPadding="false"
                android:textColor="@color/color_2"
                android:textSize="@dimen/size_2"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>