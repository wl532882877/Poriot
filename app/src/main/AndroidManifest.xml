<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pay.poriot">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.pay.poriot.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name="com.pay.poriot.ui.activity.LoadingActivity"
            android:exported="true"
            android:launchMode="standard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.pay.poriot.ui.activity.GuideActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pay.poriot.ui.activity.CreateWalletActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pay.poriot.ui.activity.CrossPaymentActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.PrivateKeyInfoActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pay.poriot.ui.activity.AssetInfoActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.QRCodeScannerActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.SelectAddressActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pay.poriot.ui.activity.QRCollectionActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.PopularTokensActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="standard"
            android:screenOrientation="portrait" />


        <activity
            android:name="com.pay.poriot.ui.activity.SecurityInfoActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="standard"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.WalletDetailActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="standard"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.ImportWalletActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.ModifyPasswordActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.NetworkSettingsActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.InformationActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />


        <activity
            android:name="com.pay.poriot.ui.activity.LanguageSettingActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.QRCodeShareActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.pay.poriot.ui.activity.AboutActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />

    </application>
</manifest>